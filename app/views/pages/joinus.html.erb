
<%= stylesheet_link_tag 'joinus' %>

<div class="join-us">
  <%= image_tag("signup.jpg", alt: "Description of the image", class: 'session_left_img') %>
  <div class="join-us_right">
    <div class="join-us_right_card">
      <%= image_tag('logo_temp.png', alt: 'Logo', class: 'site_logo join-us_logo') %>
      <h2 class="join-us_right_card_heading">Create your Account</h2>
